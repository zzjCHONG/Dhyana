<UserControl
    x:Class="Dhyana400BSIWpf.TUCamUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:Dhyana400BSIWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:TUCamViewModel}"
    Background="Gray"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <Border
                Margin="2,5"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel IsEnabled="{Binding PropControlIsEnable}">

                    <StackPanel.Resources>
                        <Style TargetType="GroupBox">
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock FontWeight="Bold" Text="{Binding}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Margin" Value="20,5" />
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
                            <Setter Property="VerticalContentAlignment" Value="Top" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel
                                                Margin="0,8,6,8"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Orientation="Horizontal">
                                                <ContentPresenter
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    ContentSource="Header"
                                                    RecognizesAccessKey="True"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                                            </StackPanel>
                                            <ContentPresenter
                                                x:Name="Presenter"
                                                Grid.Column="1"
                                                Margin="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <TextBlock
                        Margin="20,10,0,10"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        Text="图像控制" />

                    <Separator Margin="10,0,10,10" Background="Black" />

                    <GroupBox Header="亮度" IsEnabled="{Binding IsStartAcquisition}">
                        <DockPanel>

                            <TextBox
                                x:Name="BrightnessTextBox"
                                Width="75"
                                HorizontalAlignment="Stretch"
                                DockPanel.Dock="Right"
                                KeyDown="BrightnessTextBox_KeyDown"
                                Text="{Binding Brightness, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />

                            <Slider
                                x:Name="BrightnessSlider"
                                Margin="-5,0,10,0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="20"
                                Value="{Binding Brightness, Mode=TwoWay, Delay=100}" />
                        </DockPanel>
                    </GroupBox>

                    <GroupBox Header="对比度" IsEnabled="{Binding IsStartAcquisition}">
                        <DockPanel>
                            <TextBox
                                x:Name="ContrastTextBox"
                                Width="75"
                                HorizontalAlignment="Stretch"
                                DockPanel.Dock="Right"
                                KeyDown="ContrastTextBox_KeyDown"
                                Text="{Binding Contrast, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />

                            <Slider
                                x:Name="ContrastSlider"
                                Margin="-5,0,10,0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="0"
                                Value="{Binding Contrast, Mode=TwoWay, Delay=100}" />
                        </DockPanel>
                    </GroupBox>

                    <GroupBox Header="伽玛" IsEnabled="{Binding IsStartAcquisition}">
                        <DockPanel>
                            <TextBox
                                x:Name="GammaTextBox"
                                Width="75"
                                HorizontalAlignment="Stretch"
                                DockPanel.Dock="Right"
                                KeyDown="GammaTextBox_KeyDown"
                                Text="{Binding Gamma, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />
                            <Slider
                                x:Name="GammaSlider"
                                Margin="-5,0,10,0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="0"
                                Value="{Binding Gamma, Mode=TwoWay, Delay=100}" />
                        </DockPanel>
                    </GroupBox>

                    <GroupBox Header="曝光(ms)" IsEnabled="{Binding IsStartAcquisition}">
                        <DockPanel>
                            <TextBox
                                x:Name="ExposureTextBox"
                                Width="75"
                                HorizontalAlignment="Stretch"
                                DockPanel.Dock="Right"
                                KeyDown="ExposureTextBox_KeyDown"
                                Text="{Binding Exposure, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />

                            <ToggleButton
                                x:Name="AutoExpose"
                                Width="Auto"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                liftui:StatusSwitchElement.HideUncheckedElement="False"
                                DockPanel.Dock="Right"
                                Focusable="True"
                                IsChecked="{Binding IsAutoExposure}"
                                Style="{DynamicResource ToggleButtonCustom}">
                                <liftui:StatusSwitchElement.CheckedElement>
                                    <Border
                                        Background="{DynamicResource PrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Label
                                            Height="32"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Content="自动曝光"
                                            FontSize="13"
                                            Foreground="White" />
                                    </Border>
                                </liftui:StatusSwitchElement.CheckedElement>

                                <Border
                                    Background="{DynamicResource RegionBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Label
                                        Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="自动曝光"
                                        FontSize="13"
                                        Foreground="{DynamicResource PrimaryTextBrush}" />
                                </Border>

                            </ToggleButton>

                            <Slider
                                x:Name="ExposeSlider"
                                Margin="-5,0,10,0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="{Binding ExposureRangeMax}"
                                Minimum="{Binding ExposureRangeMin}"
                                TickFrequency="1"
                                Value="{Binding Exposure, Mode=TwoWay, Delay=100}" />

                        </DockPanel>
                    </GroupBox>

                    <GroupBox Header="色阶" IsEnabled="{Binding IsStartAcquisition}">
                        <DockPanel>

                            <TextBox
                                Width="75"
                                HorizontalAlignment="Stretch"
                                DockPanel.Dock="Right"
                                KeyDown="LevelTextbox_KeyDown"
                                Text="{Binding RightLevel, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />

                            <TextBox
                                x:Name="LevelTextbox"
                                Width="75"
                                HorizontalAlignment="Stretch"
                                DockPanel.Dock="Right"
                                KeyDown="LevelTextbox_KeyDown"
                                Text="{Binding LeftLevel, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                ToolTip="Enter确认输入" />

                            <ToggleButton
                                x:Name="AutoLevel"
                                Width="Auto"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                liftui:StatusSwitchElement.HideUncheckedElement="False"
                                DockPanel.Dock="Right"
                                Focusable="True"
                                IsChecked="{Binding IsAutoLevel}"
                                Style="{DynamicResource ToggleButtonCustom}">
                                <liftui:StatusSwitchElement.CheckedElement>
                                    <Border
                                        Background="{DynamicResource PrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Label
                                            Height="32"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Content="自动色阶"
                                            FontSize="13"
                                            Foreground="White" />
                                    </Border>
                                </liftui:StatusSwitchElement.CheckedElement>

                                <Border
                                    Background="{DynamicResource RegionBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Label
                                        Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="自动色阶"
                                        FontSize="13"
                                        Foreground="{DynamicResource PrimaryTextBrush}" />
                                </Border>

                            </ToggleButton>

                            <!--  改成左右色阶  -->

                            <Slider
                                x:Name="LevelSlider"
                                Margin="-5,0,10,0"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                TickFrequency="1"
                                Visibility="Collapsed"
                                Value="{Binding Exposure, Mode=TwoWay, Delay=100}" />

                        </DockPanel>
                    </GroupBox>

                    <GroupBox Header="分辨率选择" IsEnabled="{Binding IsStartAcquisition}">
                        <ComboBox
                            x:Name="ResolutionComboBox"
                            ItemsSource="{Binding ResolutionsList}"
                            SelectedIndex="{Binding ResolutionIndex}" />
                    </GroupBox>

                    <GroupBox Header="ROI选择" IsEnabled="{Binding IsStartAcquisition}">
                        <ComboBox
                            x:Name="ROIComboBox"
                            ItemsSource="{Binding RoiList}"
                            SelectedItem="{Binding SelectedROI}" />
                    </GroupBox>

                    <GroupBox Header="模式选择" IsEnabled="{Binding IsStartAcquisition}">
                        <ComboBox
                            x:Name="ModeComboBox"
                            ItemsSource="{Binding ImageModeList}"
                            SelectedIndex="{Binding ImageModeIndex}" />
                    </GroupBox>

                    <GroupBox Header="增益选择" IsEnabled="{Binding IsStartAcquisition}">
                        <ComboBox
                            x:Name="GainComboBox"
                            ItemsSource="{Binding GainList}"
                            SelectedIndex="{Binding GainIndex}" />
                    </GroupBox>

                    <GroupBox Header="组合模式选择" IsEnabled="{Binding IsStartAcquisition}">
                        <ComboBox
                            x:Name="CompositeModeComboBox"
                            ItemsSource="{Binding CompositeModeList}"
                            SelectedIndex="{Binding CompositeModeIndex}" />
                    </GroupBox>

                    <GroupBox Header="图像旋转" IsEnabled="{Binding IsStartAcquisition}">
                        <DockPanel>
                            <ToggleButton
                                Grid.Column="1"
                                Width="Auto"
                                Margin="10,3,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                liftui:StatusSwitchElement.HideUncheckedElement="False"
                                DockPanel.Dock="Left"
                                Focusable="False"
                                IsChecked="{Binding IsFlipHorizontal}"
                                Style="{DynamicResource ToggleButtonCustom}">

                                <liftui:StatusSwitchElement.CheckedElement>
                                    <Border
                                        Background="{DynamicResource PrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Label
                                            Height="32"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Content="水平翻转"
                                            FontSize="13"
                                            Foreground="White" />
                                    </Border>
                                </liftui:StatusSwitchElement.CheckedElement>

                                <Border
                                    Background="{DynamicResource RegionBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Label
                                        Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="水平翻转"
                                        FontSize="13"
                                        Foreground="{DynamicResource PrimaryTextBrush}" />
                                </Border>

                            </ToggleButton>

                            <ToggleButton
                                Grid.Column="2"
                                Width="Auto"
                                Margin="10,3,10,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                liftui:StatusSwitchElement.HideUncheckedElement="False"
                                DockPanel.Dock="Left"
                                Focusable="False"
                                IsChecked="{Binding IsFlipVertical}"
                                Style="{DynamicResource ToggleButtonCustom}">

                                <liftui:StatusSwitchElement.CheckedElement>
                                    <Border
                                        Background="{DynamicResource PrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Label
                                            Height="32"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Content="垂直翻转"
                                            FontSize="13"
                                            Foreground="White" />
                                    </Border>
                                </liftui:StatusSwitchElement.CheckedElement>

                                <Border
                                    Background="{DynamicResource RegionBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Label
                                        Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="垂直翻转"
                                        FontSize="13"
                                        Foreground="{DynamicResource PrimaryTextBrush}" />
                                </Border>

                            </ToggleButton>
                        </DockPanel>


                    </GroupBox>

                    <GroupBox Header="帧率">
                        <DockPanel>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding FrameRate, StringFormat={}{0:F2}}" />

                            <Button
                                Width="100"
                                Height="32"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding ReconnectCommand}"
                                Content="重连"
                                FontSize="13"
                                IsEnabled="{Binding CanReconnect}"
                                Visibility="Collapsed" />
                        </DockPanel>

                    </GroupBox>

                </StackPanel>
            </Border>

            <Border
                Margin="2"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8">
                <UniformGrid Margin="5" Columns="3">

                    <Button
                        Height="32"
                        Command="{Binding CaptureCommand}"
                        Content="图像存储"
                        FontSize="13"
                        IsEnabled="False"
                        Visibility="Collapsed" />

                    <Button
                        x:Name="CaptureAsync"
                        Height="32"
                        Command="{Binding CaptureCommand}"
                        Content="图像捕获"
                        FontSize="13"
                        IsEnabled="{Binding IsStartAcquisition}" />

                    <Button
                        Height="32"
                        Command="{Binding RestoretoInitialSettingsCommand}"
                        Content="恢复初始设置"
                        FontSize="13"
                        IsEnabled="{Binding IsStartAcquisition}" />

                    <ToggleButton
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,0,10,0"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding IsStartAcquisition}"
                        IsEnabled="{Binding IsConnected}"
                        Style="{DynamicResource ToggleButtonCustom}">

                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="停止采集"
                                    FontSize="13"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>

                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Content="开始采集"
                                FontSize="13"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>

                    </ToggleButton>

                </UniformGrid>
            </Border>

            <Border
                Margin="2"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8">
                <UniformGrid Margin="5" Columns="1">
                    <Button
                        Height="32"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{Binding InitCommand}"
                        Content="初始化"
                        FontSize="13" />
                </UniformGrid>
            </Border>
        </StackPanel>

        <Border
            Grid.Column="1"
            Margin="2"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="8">
            <Image Source="{Binding Display}" />
            <!--<liftui:ImageViewer ImageSource="{Binding Display}"/>-->
        </Border>
    </Grid>

</UserControl>
