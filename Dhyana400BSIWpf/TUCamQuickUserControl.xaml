<UserControl
    x:Class="Dhyana400BSIWpf.TUCamQuickUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:Dhyana400BSIWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:TUCamViewModel}"
    Background="Gray"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Column="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="Transparent">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.9*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition Width="0.4*" />
                    </Grid.ColumnDefinitions>

                    <ToggleButton
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,0,10,0"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Command="{Binding StartCaptureCommand}"
                        Focusable="False"
                        IsChecked="{Binding IsStartAcquisition}"
                        IsEnabled="{Binding IsCapure}"
                        Style="{DynamicResource ToggleButtonCustom}">

                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="停止采集"
                                    FontSize="13"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>

                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Content="开始采集"
                                FontSize="13"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>

                    </ToggleButton>

                    <!--<controls:CameraButton
                  Grid.Column="0"
                  Width="110"
                  Height="110"
                  Margin="0,0,10,0"
                  Command="{Binding StartCaptureCommand}"
                  Focusable="False"
                  IsEnabled="{Binding IsInit}"
                  IsStart="{Binding IsStartAcquisition}" />-->

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Foreground="#d3d3d3"
                            Text="曝光时间(ms)" />

                        <TextBox
                            HorizontalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            KeyDown="TextBox_KeyDown"
                            Text="{Binding Exposure, StringFormat={}{0:F0}, Mode=TwoWay, UpdateSourceTrigger=Explicit}" />

                        <ToggleButton
                            x:Name="AutoExpose"
                            Width="Auto"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            liftui:StatusSwitchElement.HideUncheckedElement="False"
                            Command="{Binding SetAutoExposureCommand}"
                            DockPanel.Dock="Right"
                            Focusable="True"
                            IsChecked="{Binding IsAutoExposure}"
                            Style="{DynamicResource ToggleButtonCustom}">
                            <liftui:StatusSwitchElement.CheckedElement>
                                <Border
                                    Background="{DynamicResource PrimaryBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Label
                                        Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="自动曝光"
                                        FontSize="13"
                                        Foreground="White" />
                                </Border>
                            </liftui:StatusSwitchElement.CheckedElement>

                            <Border
                                Background="{DynamicResource RegionBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="自动曝光"
                                    FontSize="13"
                                    Foreground="{DynamicResource PrimaryTextBrush}" />
                            </Border>

                        </ToggleButton>

                        <DockPanel
                            Margin="10,0"
                            HorizontalAlignment="Right"
                            IsHitTestVisible="False">

                            <TextBox
                                Margin="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Text="{Binding FrameRate, StringFormat={}{0:F2}}" />
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="White"
                                IsHitTestVisible="False"
                                Text="fps" />

                        </DockPanel>

                    </StackPanel>
                </Grid>
            </Grid>

            <!--  参数设置  -->
            <StackPanel Grid.Row="1">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="0.45*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock
                            Margin="10,0,0,0"
                            FontWeight="SemiBold"
                            Foreground="#d3d3d3"
                            Text="模式选择" />

                        <ComboBox
                            x:Name="ImageModeBox"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding ImageModeandGlobalGainList}"
                            SelectedIndex="{Binding ImageModeandGlobalGainIndex, Mode=TwoWay}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock
                            Margin="10,0,0,0"
                            FontWeight="SemiBold"
                            Foreground="#d3d3d3"
                            Text="ROI切换" />
                        <ComboBox
                            x:Name="ROIList"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding RoiList}"
                            SelectedIndex="{Binding RoiIndex}" />
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="155" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock
                            Margin="10,0,0,0"
                            FontWeight="SemiBold"
                            Foreground="#d3d3d3"
                            Text="分辨率" />
                        <ComboBox
                            x:Name="ResolutionBox"
                            Height="30"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding ResolutionsList}"
                            SelectedIndex="{Binding ResolutionIndex, Mode=TwoWay}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,16,0,0">
                        <DockPanel>
                            <Button
                                Width="40"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                Command="{Binding SetAutoLevelCommand}"
                                Content="色阶"
                                IsEnabled="{Binding IsStartAcquisition}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAutoLevelSet}" Value="True">
                                                <Setter Property="Background" Value="Green" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="BorderBrush" Value="DarkGreen" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>


                            <Button
                                Height="30"
                                HorizontalAlignment="Stretch"
                                Command="{Binding ToggleSaveImagePopupCommand}"
                                Content="存图"
                                IsEnabled="{Binding IsStartAcquisition}" />
                        </DockPanel>
                    </StackPanel>
                </Grid>

            </StackPanel>

            <!--  色阶  -->
            <Grid
                Grid.Row="2"
                Height="30"
                Visibility="Visible">
                <DockPanel>

                    <TextBox
                        x:Name="leftLevel"
                        Width="55"
                        MinHeight="1"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        DockPanel.Dock="Left"
                        KeyDown="LevelTextBox_KeyDown"
                        Text="{Binding ElementName=levelRangeSlider, Path=StartValue, Mode=TwoWay, UpdateSourceTrigger=Explicit, StringFormat=N0}" />

                    <TextBox
                        x:Name="rightLevel"
                        Width="55"
                        MinHeight="1"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        DockPanel.Dock="Right"
                        KeyDown="LevelTextBox_KeyDown"
                        Text="{Binding ElementName=levelRangeSlider, Path=EndValue, Mode=TwoWay, UpdateSourceTrigger=Explicit, StringFormat=N0}" />

                    <!--<controls:RangeSlider
                  x:Name="levelRangeSlider"
                  Margin="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center"
                  EndValue="{Binding RightLevel, Mode=TwoWay, Delay=100}"
                  IsSnapToTickEnabled="True"
                  Maximum="65535"
                  Minimum="1"
                  Orientation="Horizontal"
                  StartValue="{Binding LeftLevel, Mode=TwoWay, Delay=100}"
                  TickFrequency="10" />-->
                </DockPanel>

            </Grid>
        </Grid>

        <Border
            Grid.Column="1"
            Margin="2"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="8">
            <Image Source="{Binding Display}" />
            <!--<liftui:ImageViewer ImageSource="{Binding Display}"/>-->
        </Border>
    </Grid>

</UserControl>
